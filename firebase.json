{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.js.map",
      "**/*.ts",
      "**/*.jsx",
      "**/*.tsx",
      "**/package*.json",
      "**/README.md",
      "**/CHANGELOG.md",
      "**/CONTRIBUTING.md",
      "**/docs/**",
      "**/tests/**",
      "**/test/**",
      "**/spec/**",
      "**/src/**",
      "**/dev/**",
      "**/build/**",
      "**/dist/**",
      "add_admin.js"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}